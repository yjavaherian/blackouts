# Database Configuration
# For local development, use a local file
DATABASE_URL=file:local.db
# For production with Turso, use:
# DATABASE_URL=libsql://your-database-name.turso.io
# DATABASE_AUTH_TOKEN=your-turso-auth-token

# Environment Configuration
NODE_ENV=development

# OTP API Configuration
OTP_SEND_URL=https://uiapi.saapa.ir/api/otp/sendCode
OTP_VERIFY_URL=https://uiapi.saapa.ir/api/otp/verifyCode

# Blackouts API Configuration
BLACKOUTS_API_URL=https://uiapi2.saapa.ir/api/ebills/PlannedBlackoutsReport

# Encryption key for sensitive data (generate a secure 32-byte key in production)
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-in-production

# Session Configuration
SESSION_SECURE_COOKIE=false